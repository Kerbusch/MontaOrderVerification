<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OrderVerificationMAUI.MainPage">


    <Grid BackgroundColor="#FFFFBF">

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="2*"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>



        <Grid
            Grid.Column="1"
            Grid.Row="0"
            RowSpacing="20"
            ColumnSpacing="20">

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="2*"  />
                <RowDefinition />
            </Grid.RowDefinitions>

            <BoxView
                Grid.Row="1"
                Grid.Column="0"
                CornerRadius="10"
                Color="#FFFF7a" />
            <Entry
                x:Name="sku_entry"
                Grid.Row="1"
                Grid.Column="0"
                Text=""
                FontSize="Large"/>
            
        </Grid>



        <Grid
            Grid.Column="1"
            Grid.Row="1"
            RowSpacing="20"
            ColumnSpacing="20">

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button     
                Grid.Row="0"
                Grid.Column="0"
                Text="1"
                Clicked="clicked1"
                FontSize="Large"
                CornerRadius="10"
                BorderWidth="3"
                TextColor="Black"
                BorderColor="Black"
                BackgroundColor="#FFFF7a"/>

            <Button
                Grid.Row="0"
                Grid.Column="1"
                Text="2"
                Clicked="clicked2"
                FontSize="Large"
                CornerRadius="10"
                BorderWidth="3"
                TextColor="Black"
                BorderColor="Black"
                BackgroundColor="#FFFF7a"/>

            <Button
                Grid.Row="0"
                Grid.Column="2"
                Text="3"
                Clicked="clicked3"
                FontSize="Large"
                CornerRadius="10"
                BorderWidth="3"
                TextColor="Black"
                BorderColor="Black"
                BackgroundColor="#FFFF7a"/>

            <Button
                Grid.Row="1"
                Grid.Column="0"
                Text="4"
                Clicked="clicked4"
                FontSize="Large"
                CornerRadius="10"
                BorderWidth="3"
                TextColor="Black"
                BorderColor="Black"
                BackgroundColor="#FFFF7a"/>

            <Button
                Grid.Row="1"
                Grid.Column="1"
                Text="5"
                Clicked="clicked5"
                FontSize="Large"
                CornerRadius="10"
                BorderWidth="3"
                TextColor="Black"
                BorderColor="Black"
                BackgroundColor="#FFFF7a"/>

            <Button
                Grid.Row="1"
                Grid.Column="2"
                Text="6"
                Clicked="clicked6"
                FontSize="Large"
                CornerRadius="10"
                BorderWidth="3"
                TextColor="Black"
                BorderColor="Black"
                BackgroundColor="#FFFF7a"/>

            <Button
                Grid.Row="2"
                Grid.Column="0"
                Text="7"
                Clicked="clicked7"
                FontSize="Large"
                CornerRadius="10"
                BorderWidth="3"
                TextColor="Black"
                BorderColor="Black"
                BackgroundColor="#FFFF7a"/>

            <Button
                Grid.Row="2"
                Grid.Column="1"
                Text="8"
                Clicked="clicked8"
                FontSize="Large"
                CornerRadius="10"
                BorderWidth="3"
                TextColor="Black"
                BorderColor="Black"
                BackgroundColor="#FFFF7a"/>

            <Button
                Grid.Row="2"
                Grid.Column="2"
                Text="9"
                Clicked="clicked9"
                FontSize="Large"
                CornerRadius="10"
                BorderWidth="3"
                TextColor="Black"
                BorderColor="Black"
                BackgroundColor="#FFFF7a"/>

            <Button
                Grid.Row="3"
                Grid.Column="0"
                Text="C"
                Clicked="clickedDelete"
                FontSize="Large"
                CornerRadius="10"
                BorderWidth="3"
                TextColor="Black"
                BorderColor="Black"
                BackgroundColor="#FFFF7a"/>

            <Button
                Grid.Row="3"
                Grid.Column="1"
                Text="0"
                Clicked="clicked0"
                FontSize="Large"
                CornerRadius="10"
                BorderWidth="3"
                TextColor="Black"
                BorderColor="Black"
                BackgroundColor="#FFFF7a"/>

            <Button
                Grid.Row="3"
                Grid.Column="2"
                Text="back"
                Clicked="clickedBack"
                FontSize="Large"
                CornerRadius="10"
                BorderWidth="3"
                TextColor="Black"
                BorderColor="Black"
                BackgroundColor="#FFFF7a"/>

        </Grid>


        <Grid
            Grid.Column="1"
            Grid.Row="2"
            RowSpacing="20"
            ColumnSpacing="20">

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="2*"  />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Button
                Grid.Row="1"
                Grid.Column="0"
                Text="Continue to make pictures"
                Clicked="clickedEnter"
                FontSize="Large"
                CornerRadius="10"
                BorderWidth="3"
                TextColor="Black"
                BorderColor="Black"
                BackgroundColor="#FFFF7a"/>
            
        </Grid>

    </Grid>

</ContentPage>
